#define LONG_MESSAGE (sizeof(msg) - sizeof( ((msg*)(0))->type))

#define REQ_NUM_CLIENT 0
#define RESP_NUM_CLIENT 1
#define REJECT_NUM_CLIENT -1
#define REQ_LISTE_PRODUITS 2
#define RESP_LISTE_PRODUITS 3
#define CONNEXION_ENDS 4

#define CLIENT_TYPE 3
#define SERVER_TYPE 2
#define ID_REQUEST_TYPE 1

typedef struct {
	long type; 				// type du message
	int operation; 		//	operation demandée 
	int num_client; 		// numero du client
   char content[100];	// le contenu de la réponse du serveur
} msg;
